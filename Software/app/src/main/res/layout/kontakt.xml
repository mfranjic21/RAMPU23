<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Contact"
    style="@style/ScreenBackground">

    <ImageButton
        android:id="@+id/natragNaMenu"
        style="@style/ScreenBackground"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/baseline_arrow_back_ios_24" />


    <TextView
        android:id="@+id/postavkeAplikacije"
        style="@style/TextColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/natragNaMenu"
        android:fontFamily="@font/mulish"
        android:text="Kontakt"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kontaktBroj"
        style="@style/TextColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/natragNaMenu"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/mulish"
        android:lineSpacingExtra="8dp"
        android:textSize="18sp"
        android:text="Naziv poduzeća: IznajmljivanjeVozila d.o.o\nKontakt broj: +385 211/111 \nEmail: iznajmljivanjevozila@gmail.com \nAdresa: Zagrebačka ul. 147, 34000, Požega" />

    <org.osmdroid.views.MapView
        android:id="@+id/osmmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kontaktBroj"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp" />

</RelativeLayout>