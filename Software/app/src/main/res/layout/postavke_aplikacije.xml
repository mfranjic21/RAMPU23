<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground">

    <ImageButton
        android:id="@+id/natrag"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        android:contentDescription="@string/natrag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postavkeAplikacije"
        style="@style/TextColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/mulish"
        android:text="@string/postavkeAplikacije"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/natrag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/promijeniTemu"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/kontejner"
        android:fontFamily="@font/mulish"
        android:padding="12dp"
        android:text="Promijeni temu"
        android:textSize="24sp"
        android:textStyle="bold"
        style="@style/TextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchMode"
        android:layout_width="91dp"
        android:layout_height="56dp"
        android:thumb="@drawable/thumb"

        app:layout_constraintBottom_toBottomOf="@+id/promijeniTemu"
        app:layout_constraintEnd_toEndOf="@+id/promijeniTemu"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="@+id/promijeniTemu"
        app:layout_constraintTop_toTopOf="@+id/promijeniTemu"
        app:track="@drawable/track" />


</androidx.constraintlayout.widget.ConstraintLayout>