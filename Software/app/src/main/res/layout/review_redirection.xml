<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner">

            <TextView
                android:id="@+id/leaveRecension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextColorLabel"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textAlignment="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/leaveRecension"
                android:fontFamily="@font/mulish"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/recensionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextColorLabel"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textAlignment="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/leaveRecension"
                android:text="@string/recensionDescription"
                android:fontFamily="@font/mulish"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recensionDescription"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/closeRecension"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_toStartOf="@id/recensionButton"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    android:text="@string/closeRecension" />

                <Button
                    android:id="@+id/recensionButton"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recensionDescription"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/white"
                    android:padding="8dp"
                    android:text="@string/recension_vehicle" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>